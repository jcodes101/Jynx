<%= form_with(model: tree, html: { id: 'tree-form' }) do |form| %>

<div class="tree-form-page">
  <div class="right-sidebar"></div>
  
  <% if tree.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(tree.errors.count, "error") %> prohibited this tree from being saved:</h2>
      <ul>
        <% tree.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- First part -->
  <div id="first-part" class="form-section">
    <div class="form-container">
      <h1 class="form-title">Welcome to <span class="gradient-text">Jynx</span></h1>
      <p class="form-subtitle">Your personalized link page</p>

      <div class="field">
        <label class="field-label">What's your name?</label>
        <div class="Input">
          <%= form.text_field :name, id:"name", class: "field-input", placeholder: "linktr.ee/trees/yourname"%>
        </div>
      </div>

      <div class="error-text" id="name-text" style="display:none;">
        <p>Name must be more than 3 characters long</p>
      </div>

      <div style="display: none;">
        <%= form.label :user_id %>
        <%= form.number_field :user_id, value: current_user.id %>
      </div>

      <div class="form-actions">
        <button id="next-btn" type="button" class="button-1">Next</button>
      </div>
    </div>
  </div>

  <!-- Second part -->
  <div id="second-part" class="form-section" style="display: none;">
    <div class="form-container">
      <h1 class="form-title">Jynx <span class="gradient-text">yourself</span></h1>
      <p class="form-subtitle">Select the social platforms you want to showcase</p>

      <div class="social-checkboxes">
        <div class="checkbox-group">
          <%= form.check_box :show_instagram, id: "showInstagramCheckbox", class: "custom-checkbox" %>
          <%= form.label :show_instagram, "Instagram", class: "checkbox-label" %>
        </div>
        <div class="checkbox-group">
          <%= form.check_box :show_youtube, id: "showYoutubeCheckbox", class: "custom-checkbox" %>
          <%= form.label :show_youtube, "YouTube", class: "checkbox-label" %>
        </div>
        <div class="checkbox-group">
          <%= form.check_box :show_x, id: "showXCheckbox", class: "custom-checkbox" %>
          <%= form.label :show_x, "X (Twitter)", class: "checkbox-label" %>
        </div>
        <div class="checkbox-group">
          <%= form.check_box :show_github, id: "showGithubCheckbox", class: "custom-checkbox" %>
          <%= form.label :show_github, "Github", class: "checkbox-label" %>
        </div>
      </div>

      <div id="instagramField" class="field social-field" style="display: none;">
        <label class="field-label">Instagram</label>
        <%= form.text_field :instagram, class: "field-input", placeholder:"https://instagram.com/yourhandle" %>
      </div>

      <div id="xField" class="field social-field" style="display: none;">
        <label class="field-label">X/Twitter</label>
        <%= form.text_field :x, class: "field-input", placeholder:"https://x.com/yourhandle" %>
      </div>

      <div id="youtubeField" class="field social-field" style="display: none;">
        <label class="field-label">YouTube</label>
        <%= form.text_field :youtube, class: "field-input", placeholder:"https://youtube.com/@yourchannel" %>
      </div>

      <div id="githubField" class="field social-field" style="display: none;">
        <label class="field-label">Github</label>
        <%= form.text_field :github, class: "field-input", placeholder:"https://github.com/@yourgithub" %>
      </div>

      <div class="form-actions">
        <button id="next-btn-2" type="button" class="button-1">Next</button>
        <button id="back-btn-2" type="button" class="button-secondary" style="display: none;">← Back</button>
      </div>
    </div>
  </div>

  <!-- Third part -->
  <div id="third-part" class="form-section" style="display:none;">
    <div class="form-container">
      <h1 class="form-title">Select your <span class="gradient-text">Style</span></h1>
      <p class="form-subtitle">Choose the perfect theme for your Linktree</p>

      <div class="style-cards">
        <div class="style-card light-theme" id="light-card" onclick="handleCardClick('light')">
          <%= form.radio_button :style, "light", style:"position: absolute; top: 0px; left:0px; width: 100%; height: 100%; opacity: 0; ", id:"light" %>
          <div class="card-content">
            <div class="theme-preview light-preview"></div>
            <p class="card-title">Light Mode</p>
            <p class="card-description">Clean and minimal</p>
          </div>
        </div>

        <div class="style-card dark-theme" id="dark-card" onclick="handleCardClick('dark')">
          <%= form.radio_button :style, "dark", style:"position: absolute; top: 0px; left:0px; width: 100%; height: 100%; opacity: 0;", id:"dark" %>
          <div class="card-content">
            <div class="theme-preview dark-preview"></div>
            <p class="card-title">Dark Mode</p>
            <p class="card-description">Sleek and modern</p>
          </div>
        </div>

        <div class="style-card midnight-theme" id="midnight-card" onclick="handleCardClick('midnight')">
          <%= form.radio_button :style, "midnight", style:"position: absolute; top: 0px; left:0px; width: 100%; height: 100%; opacity: 0; ", id:"midnight" %>
          <div class="card-content">
            <div class="theme-preview midnight-preview"></div>
            <p class="card-title">Midnight</p>
            <p class="card-description">Deep and mysterious</p>
          </div>
        </div>

        <div class="style-card blackstar-theme" id="blackstar-card" onclick="handleCardClick('blackstar')">
          <%= form.radio_button :style, "blackstar", style:"position: absolute; top: 0px; left:0px; width: 100%; height: 100%; opacity: 0; ", id:"blackstar" %>
          <div class="card-content">
            <div class="theme-preview blackstar-preview"></div>
            <p class="card-title">Black Star</p>
            <p class="card-description">Bold and cosmic</p>
          </div>
        </div>

        <div class="style-card purplehaze-theme" id="purplehaze-card" onclick="handleCardClick('purplehaze')">
          <%= form.radio_button :style, "purplehaze", style:"position: absolute; top: 0px; left:0px; width: 100%; height: 100%; opacity: 0; ", id:"purplehaze" %>
          <div class="card-content">
            <div class="theme-preview purplehaze-preview"></div>
            <p class="card-title">Purple Haze</p>
            <p class="card-description">Dreamy and ethereal</p>
          </div>
        </div>
      </div>

      <div class="form-actions">
        <%= form.submit "Create My Jynx", class: "button-1", id: "submit-btn" %>
        <button id="back-btn-3" type="button" class="button-secondary">← Back</button>
      </div>
    </div>
  </div>
</div>

<!-- JavaScript to toggle visibility -->
<script>
function handleCardClick(style) {
  // Remove the selection from all cards
  document.querySelectorAll('.style-card').forEach(function(card) {
    card.classList.remove('selected');
  });

  // Add selection to the clicked card
  document.getElementById(style + '-card').classList.add('selected');

  // IMPORTANT: Actually check the radio button
  document.getElementById(style).checked = true;
}

$(document).ready(function() {
  $("#next-btn").on("click", function() {
    var nameValue = $("#name").val();
    if (nameValue.length > 3) {
      $("#first-part").hide();
      $("#second-part").show();
      $("#back-btn-2").show();
      // Add class for two-button layout
      $("#second-part .form-actions").addClass("two-buttons");
    } else {
      $("#name-text").show();
    }
  });

  $("#next-btn-2").on("click", function() {
    $("#second-part").hide();
    $("#third-part").show();
    // Add class for two-button layout
    $("#third-part .form-actions").addClass("two-buttons");
  });

  $("#back-btn-2").on("click", function() {
    $("#second-part").hide();
    $("#first-part").show();
    $("#back-btn-2").hide();
    // Remove class for single-button layout
    $("#second-part .form-actions").removeClass("two-buttons");
  });

  $("#back-btn-3").on("click", function() {
    $("#third-part").hide();
    $("#second-part").show();
    // Make sure second part has proper button layout
    $("#second-part .form-actions").addClass("two-buttons");
  });

  $("#add-more-links-btn").on("click", function() {
    $("#link_2").show();
    $("#link_3").show();
  });
});

$("#tree-form").on("keydown", function(event) {
  if (event.key === "Enter") {
    event.preventDefault();
  }
});

// Add this to your existing JavaScript section
$("#tree-form").on("submit", function(event) {
  // Debug: Check what style is selected
  const selectedStyle = document.querySelector('input[name="tree[style]"]:checked');
  if (selectedStyle) {
    console.log("Selected style:", selectedStyle.value);
  } else {
    console.log("No style selected!");
    // Optionally prevent submission if no style is selected
    // event.preventDefault();
    // alert("Please select a style before submitting");
  }
});

document.addEventListener("DOMContentLoaded", function() {
  const showInstagramCheckbox = document.getElementById("showInstagramCheckbox");
  const showXCheckbox = document.getElementById("showXCheckbox");
  const showYoutubeCheckbox = document.getElementById("showYoutubeCheckbox");
  const showGithubCheckbox = document.getElementById("showGithubCheckbox");

  const instagramField = document.getElementById("instagramField");
  const xField = document.getElementById("xField");
  const youtubeField = document.getElementById("youtubeField");
  const githubField = document.getElementById("githubField");

  showInstagramCheckbox.addEventListener("change", function() {
    instagramField.style.display = showInstagramCheckbox.checked ? "block" : "none";
  });

  showYoutubeCheckbox.addEventListener("change", function() {
    youtubeField.style.display = showYoutubeCheckbox.checked ? "block" : "none";
  });

  showXCheckbox.addEventListener("change", function() {
    xField.style.display = showXCheckbox.checked ? "block" : "none";
  });

  showGithubCheckbox.addEventListener("change", function() {
    githubField.style.display = showGithubCheckbox.checked ? "block" : "none";
  });
});

function handleCardClick(style) {
  // Remove the selection from all cards
  document.querySelectorAll('.style-card').forEach(function(card) {
    card.classList.remove('selected');
  });

  // Add selection to the clicked card
  document.getElementById(style + '-card').classList.add('selected');
}
</script>

